{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "tests"]
}
